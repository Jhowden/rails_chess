<h1>Login</h1>

<%= form_for :login, url: login_user_path do |f| %>
  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>
  
  <p>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.submit "Login"%>
  </p>
<% end %>

<%= link_to "Home", "/" %>